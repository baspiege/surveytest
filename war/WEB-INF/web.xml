<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">
 
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

    <welcome-file-list>
        <welcome-file>surveys</welcome-file>
    </welcome-file-list>

    <!-- Surveys -->    
    <servlet>
      <servlet-name>surveys</servlet-name>
      <servlet-class>surveytest.controller.SurveysServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>surveys</servlet-name>
      <url-pattern>/surveys</url-pattern>
    </servlet-mapping>
    
    <!-- Survey -->
    <servlet>
      <servlet-name>survey</servlet-name>
      <servlet-class>surveytest.controller.SurveyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>survey</servlet-name>
      <url-pattern>/survey</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>surveyAdd</servlet-name>
      <servlet-class>surveytest.controller.SurveyAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>surveyAdd</servlet-name>
      <url-pattern>/surveyAdd</url-pattern>
    </servlet-mapping>

    <!-- Language -->
    <servlet>
      <servlet-name>languageAdd</servlet-name>
      <servlet-class>surveytest.controller.LanguageAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>languageAdd</servlet-name>
      <url-pattern>/languageAdd</url-pattern>
    </servlet-mapping>
    
    <!-- Question Actions -->
    <servlet>
      <servlet-name>question</servlet-name>
      <servlet-class>surveytest.controller.QuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>question</servlet-name>
      <url-pattern>/question</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>questionAdd</servlet-name>
      <servlet-class>surveytest.controller.QuestionAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>questionAdd</servlet-name>
      <url-pattern>/questionAdd</url-pattern>
    </servlet-mapping>    
    <servlet>
      <servlet-name>questionUpdate</servlet-name>
      <servlet-class>surveytest.controller.QuestionUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>questionUpdate</servlet-name>
      <url-pattern>/questionUpdate</url-pattern>
    </servlet-mapping>
    
    <!-- Answer Set Actions -->
    <servlet>
      <servlet-name>answerSetAdd</servlet-name>
      <servlet-class>surveytest.controller.AnswerSetAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>answerSetAdd</servlet-name>
      <url-pattern>/answerSetAdd</url-pattern>
    </servlet-mapping>    
    <servlet>
      <servlet-name>answerSet</servlet-name>
      <servlet-class>surveytest.controller.AnswerSetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>answerSet</servlet-name>
      <url-pattern>/answerSet</url-pattern>
    </servlet-mapping>
    
    <!-- Answer Actions -->
    <servlet>
      <servlet-name>answerAdd</servlet-name>
      <servlet-class>surveytest.controller.AnswerAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>answerAdd</servlet-name>
      <url-pattern>/answerAdd</url-pattern>
    </servlet-mapping>    
    <servlet>
      <servlet-name>answer</servlet-name>
      <servlet-class>surveytest.controller.AnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>answer</servlet-name>
      <url-pattern>/answer</url-pattern>
    </servlet-mapping>
    
    <!-- Answer Actions -->
    <servlet>
      <servlet-name>surveyResponse</servlet-name>
      <servlet-class>surveytest.controller.SurveyResponseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>surveyResponse</servlet-name>
      <url-pattern>/surveyResponse</url-pattern>
    </servlet-mapping>    
    
    <error-page>
      <exception-type>java.lang.Exception</exception-type>
      <location>/redirects/error.jsp</location>
    </error-page>
    
</web-app>
